---
import type {Playlist} from '../lib/data'

interface Props {
  playlist: Playlist
}

const { playlist } = Astro.props
const { id, cover, title, artists, color } = playlist

const artistsString = artists.join(', ')
---

<a href={`/playlist/${id}`} 
  class="playlist-item flex relative p-4 overflow-hidden items-center gap-5 rounded-md 
hover:bg-zinc-900 transition-all duration-300 shadow-lg hover:shadow-xl
bg-zinc-500/30 w-40 flex-col">
  <picture class="aspect-square w-full h-auto flex-none">
    <img src={cover} 
    alt={`Cover of ${title} by ${artistsString}`}
    class="object-cover w-full h-full rounded-md">
  </picture>
  <div class="flex flex-auto flex-col">
    <h3 class="text-white text-base line-clamp-1">
      {title}
    </h3>
    <span class="text-gray-100 text-sm line-clamp-2">
      {artistsString}
    </span>
  </div>
</a>